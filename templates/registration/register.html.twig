{% extends 'base.html.twig' %}

{% block title %}

    {{'Registration'|trans }}
{% endblock %}

{% block body %}


    <section class="user-profile section">
        <div class="container">
            <div class="row">

                <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">

                    <div class="widget personal-info">
                        <h1 class="widget-header user">{{'Registration'|trans }}</h1>

                        {{ form_start(registrationForm) }}

                        <div class="form-group">

                                    {{ form_row(registrationForm.email, { 'label': 'Email'|trans }) }}
                        </div>

                            <div class="form-group">

                            {{ form_row(registrationForm.plainPassword, { 'label': 'Password'|trans  }) }}
                                </div>

                            <div class="form-group">

                                <div class="form-group form-check">

                                    <label for="agree">
                                        {{'Confirm agree to'|trans}} <a href="{{ path('terms') }}" target='_blank'> {{'our Terms and conditions'|trans  }}</a>
                                    </label>
                                    {{ form_row(registrationForm.agreeTerms, { 'label': false, 'class' : 'form-check-input', 'id':'agree' }) }}

                                </div>

                            </div>

                        </div>

                         <button class="btn btn-primary">{{'Register'|trans }}</button>

                        {{ form_end(registrationForm) }}







                    </div>

                </div>

                <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
                    <div class="sidebar">

                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}
