<div class="form-group">
    {{ form_row(form.title, { 'label': 'Title'|trans }) }}
</div>

<div class="form-group">
    {{ form_row(form.description, { 'label': 'Description'|trans, attr:{'placeholder': 'What needs to be done'|trans} }) }}
</div>


<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.salary, { 'label': 'Salary'|trans }) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.salaryCurrency, { 'label': ' ' }) }}
        </div>
        <div class="col-md-1">
            <br>  <br>
           {{'лил░'|trans}}
        </div>
        <div class="col-md-3">
            {{ form_row(form.salaryType, { 'label': ' ' }) }}
        </div>
    </div>
</div>

{{ form_row(form.agreeTerms, { 'label': false, 'class' : 'form-check-input' }) }}


