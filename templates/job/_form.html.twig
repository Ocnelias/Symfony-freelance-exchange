    <label class="form-check-label">
        <input class="form-check-input1" type="checkbox">   {{'Agree to'|trans}} <a href="{{ path('terms') }}"> {{'our Terms and conditions'|trans  }}</a>
    </label>
</div>




<button type="submit" class="btn btn-primary">Submit</button>


